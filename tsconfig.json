{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/components": ["src/components"],
      "@/components/*": ["src/components/*"],
      "@/hooks": ["src/hooks"],
      "@/hooks/*": ["src/hooks/*"],
      "@/layouts": ["src/layouts"],
      "@/layouts/*": ["src/layouts/*"],
      "@/models": ["src/models"],
      "@/models/*": ["src/models/*"],
      "@/modules": ["src/modules"],
      "@/modules/*": ["src/modules/*"],
      "@/styles": ["src/styles"],
      "@/styles/*": ["src/styles/*"],
      "@/services": ["src/services"],
      "@/services/*": ["src/services/*"],
      "@/types": ["src/types"],
      "@/types/*": ["src/types/*"],
      "@/utils": ["src/utils"],
      "@/utils/*": ["src/utils/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
